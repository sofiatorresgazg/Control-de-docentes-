let intentos = 0;
let maxIntentos = 3;
let user = "admin";
let pass = "1234";

let estudiantes = [];
let asignaturas = [];
let docentes = [];


function login(form) {
let u = form.usuario.value;
let p = form.clave.value;

if (u === user && p === pass) {
    alert("Bienvenido");
} else {
    intentos++;
    if (intentos >= maxIntentos) {
    alert("Usuario bloqueado");
    form.usuario.disabled = true;
    form.clave.disabled = true;
    } else {
    alert("Datos incorrectos. Intento " + intentos + " de " + maxIntentos);
    }
}
return false;


function guardarEstudiante(form) {
let nombre = form.nombre.value;
let edad = parseInt(form.edad.value);

if (edad + "" === "NaN") {
    alert("La edad debe ser un número");
    return false;
}

estudiantes.push({ nombre, edad });
alert("Estudiante guardado");
form.reset();
return false;
}


function guardarAsignatura(form) {
let nombre = form.nombre.value;

let nota = parseInt(form.nota.value); if (nota + "" === "NaN") {
    alert("La nota debe ser un número");
    return false;
}

asignaturas.push({ nombre, nota });
alert("Asignatura guardada");
form.reset();
return false;
}


function guardarDocente(form) {
let nombre = form.nombre.value;
let edad = parseInt(form.edad.value);
let id = form.id.value;

if (edad + "" === "NaN") {
    alert("La edad debe ser un número");
    return false;
}

if (edad < 18) {
    alert("El docente debe ser mayor de edad");j
    return false;
}

docentes.push({ nombre, edad, id });
alert("Docente guardado");
form.reset();
return false;
}


